@inherits LayoutComponentBase

@using Notes.Data
@inject MoodyService moodyService

<PageTitle>Notes</PageTitle>

<div class="page block sm:flex h-full text-white">
    <div class="w-full sm:h-full sm:w-96 bg-zinc-800">
        <h1 class="text-3xl font-semibold mb-2 p-4 outline-none">mdNotes</h1>
        <NavMenu OnDataChanged="@HandleDataChanged" />
    </div>

    <main class="w-full h-full bg-zinc-900 overflow-hidden">
        <Notes.Pages.Index md="@md"></Notes.Pages.Index>
    </main>
</div>

@code {
    private MoodyData md = new();

    // Event handler for when data changes in the child component
    private void HandleDataChanged(MoodyData data)
    {
        Console.WriteLine("Data changed: New=" + data.Text);
        md = data;
    }
}